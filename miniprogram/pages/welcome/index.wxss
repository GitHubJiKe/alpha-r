/* miniprogram/pages/welcome/index.wxss */
.welcome-page {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  background-color: #ededed;
}
.inner-box {
  position: relative;
  top: -40px;
}

.title {
  width: 100%;
  text-align: center;
  display: block;
  font-size: 20px;
}
.desc {
  width: 100%;
  text-align: center;
  display: block;
  font-size: 12px;
}
.counter {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 10px;
  right: 10px;
  border: 1px solid #bbbbbb;
  border-radius: 50%;
  text-align: center;
  line-height: 30px;
}
.skip {
  position: absolute;
  bottom: 20px;
  right: 10px;
  width: 50px;
  padding: 5px;
  border: 1px solid #bbbbbb;
  text-align: center;
}
